#include <stdio.h>
#define MAXLINE  1000
int i;
int c, len;
char sa[MAXLINE + 1];

int
main ()
{
  printf ("input text\n");
  while ((c = getchar ()) != '\n')
    {
      sa[len++] = c;
    }
  printf ("%s\n\ninput search caracter\n",sa);
  c = getchar ();
  for (i = 0; i < len; i++)
    {
      if (sa[i] == c)
	printf ("1\n");
      else
	printf ("0\n");
	
    }
    return 0;
}
